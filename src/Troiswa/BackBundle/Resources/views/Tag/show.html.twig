{% extends 'TroiswaBackBundle::layout-admin.html.twig' %}

{% block title %}Fiche d'un tag{% endblock %}

{% block h1 %}Fiche d'un tag{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li>
        <a href="{{ path('troiswa_back_tag_list') }}"><i class="fa fa-tag"></i> Lister les tags</a>
    </li>
    <li class="active">
        <i class="fa fa-tag"></i> Fiche d'un tag
    </li>
{% endblock %}

{% block content -%}
    <div class="row">
        <ul class="list-group col-lg-4">
            <li class="list-group-item">ID : {{ entity.id }}</li>
            <li class="list-group-item">Tag : {{ entity.word }}</li>
        </ul>
    </div>
        
    <div class="row">
        <a class="btn btn-warning" href="{{ path('troiswa_back_tag_edit', { 'id': entity.id }) }}">Editer le tag</a>
        {{ form_start(delete_form) }}
        {{ form_row(delete_form.submit, {label: 'Supprimer', attr: {class: 'btn btn-danger'}}) }}
        {{ form_end(delete_form) }}
    </div>

{% endblock %}
