{% extends 'TroiswaBackBundle::layout-admin.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block h1 %}<i class="fa fa-user"></i> Liste des utilisateurs{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li>
        <i class="fa fa-user"></i> Lister les utilisateurs
    </li>
{% endblock %}

{% block content -%}

    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Civilité</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Naissance</th>
                <th>Téléphone</th>
                <th>Identifiant</th>
                <th>Adresse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('troiswa_back_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.civility | civility }}</td>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.lastname }}</td>
                <td>{{ entity.email }}</td>
                <td>{% if entity.birthday %}{{ entity.birthday|date('d-m-Y') }}{% endif %}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.address }}</td>
                <td>
                    <a class="btn btn-sm btn-info" href="{{ path('troiswa_back_user_show', { 'id': entity.id }) }}">Voir</a>
                    <a class="btn btn-sm btn-warning" href="{{ path('troiswa_back_user_edit', { 'id': entity.id }) }}">Editer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a class="btn btn-success" href="{{ path('troiswa_back_user_add') }}">
                Créer un nouvel utilisateur
            </a>

    {% endblock %}
