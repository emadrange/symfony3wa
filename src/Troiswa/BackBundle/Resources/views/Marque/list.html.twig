{% extends "TroiswaBackBundle::layout-admin.html.twig" %}

{% set nbMarque = marques | length %}

{% block title %}Liste des marques{% endblock %}

{% block h1 %}<i class="fa fa-certificate"></i> Liste des marques ({{ nbMarque }}){% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">
        <i class="fa fa-certificate"></i> lister les marques
    </li>
{% endblock %}

{% block content %}
    <div class="table-responsive">
        <a class="btn btn-success" href="{{ path('troiswa_back_product_add') }}">Ajouter un produit</a>
        <table class="table table-bordered table-hover table-striped">
            <thead>
            <tr>
                <td>ID</td>
                <th>Titre</th>
                <th>Date de cr√©ation</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for marque in marques %}
                <tr>
                    <td>{{ marque.id }}</td>
                    <td>{{ marque.title }}</td>
                    <td>{{ marque.created | date('d - m - Y') }}</td>
                    <td><a class="btn btn-sm btn-info" href="{{ path('troiswa_back_marque_show', {"idmarque": marque.id}) }}">Voir</a>
                        <a class="btn btn-sm btn-warning" href="{{ path('troiswa_back_marque_edit', {"idmarque": marque.id}) }}">Editer</a>
                        <a class="btn btn-sm btn-danger" href="{{ path('troiswa_back_marque_delete', {"idmarque": marque.id}) }}">Suppr.</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/remove.js') }}" type="text/javascript"></script>
{% endblock %}