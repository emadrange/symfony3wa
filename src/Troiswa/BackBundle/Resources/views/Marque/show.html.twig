{% extends "TroiswaBackBundle::layout-admin.html.twig" %}

{% block title %}Fiche de la marque{% endblock %}

{% block h1 %}<i class="fa fa-certificate"></i> Fiche de la marque{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li>
        <a href="{{ path('troiswa_back_marque_list') }}"><i class="fa fa-certificate"></i> Lister les marques</a>
    </li>
    <li class="active">
        <i class="fa fa-certificate"></i> Fiche de la marque
    </li>
{% endblock %}

{% block content %}
    <div class="panel panel-info">

        <div class="panel-heading">
            <h3 class="panel-title">{{ marque.title }}</h3>
        </div>
        <div class="panel-body">
            {% if marque.logo is not null %}
            <figure>
                <img src="{{ asset(marque.logo.getwebpath) }}" alt="{{ marque.logo.alt }}" />
                <figcaption>{{ marque.logo.legende }}</figcaption>
            </figure>
            {% endif %}
            <div class="well">
                <p>{{ marque.description }}</p>
            </div>

            <ul class="list-group">
                <li class="list-group-item">Ajoutée le : {{ marque.created | date('d - m - Y H:i') }}</li>
                <li class="list-group-item">Modifiée le :  {{ marque.updated | date('d - m - Y H:i') }}</li>
            </ul>
        </div>
        <div style="padding: 4px 8px;">
            <a class="btn btn-sm btn-warning" href="{{ path('troiswa_back_marque_edit', {"idmarque": marque.id}) }}">Editer</a>
        </div>


    </div>
{% endblock %}