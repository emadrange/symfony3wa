{% extends "TroiswaBackBundle::layout-admin.html.twig" %}

{% block title %}Ajouter un produit{% endblock %}

{% block h1 %}
    <i class="fa fa-cube"></i> Ajouter un produit
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li>
        <a href="{{ path('troiswa_back_product_list') }}"><i class="fa fa-cube"></i> Lister les produits</a>
    </li>
    <li class="active">
        <i class="fa fa-cube"></i> Ajouter un produit
    </li>
{% endblock %}

{% block content %}
    {{ form_start(formProduct) }}
    <div class="form-group">
        {{ form_label(formProduct.title) }}
        {{ form_errors(formProduct.title) }}
        {{ form_widget(formProduct.title, {
            attr: {
                class: "form-control"
            }
        }) }}
    </div>
    <div class="form-group">
        {{ form_label(formProduct.description) }}
        {{ form_errors(formProduct.description) }}
        {{ form_widget(formProduct.description, {
            attr: {
                class: "form-control"
            }
        }) }}
    </div>
    <div class="form-group">
        {{ form_label(formProduct.active) }}
        {{ form_errors(formProduct.active) }}
        {{ form_widget(formProduct.active, {
            attr: {
                class: ""
            }
        }) }}
    </div>
    <div class="form-group">
        {{ form_label(formProduct.quantity) }}
        {{ form_errors(formProduct.quantity) }}
        {{ form_widget(formProduct.quantity, {
            attr: {
                class: "form-control"
            }
        }) }}
    </div>
    <div class="form-group">
        {{ form_label(formProduct.price) }}
        {{ form_errors(formProduct.price) }}
        {{ form_widget(formProduct.price, {
            attr: {
                class: "form-control"
            }
        }) }}
    </div>
    {{ form_end(formProduct) }}
{%  endblock %}