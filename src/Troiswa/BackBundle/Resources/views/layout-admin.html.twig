{% extends '::base.html.twig' %}

{#+++++++++ Feuilles de style - 07/2015 +++++++++#}
{% block stylesheets %}

    <!-- Bootstrap Core CSS -->
    <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="{{ asset('assets/css/sb-admin.css') }}" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="{{ asset('assets/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">

    <!-- CSS supplÃ©mentaire et surcharge -->
    <link href="{{ asset('assets/css/main.css') }}" rel="stylesheet">

{% endblock stylesheets %}
{#+++++++++++++++++++++++++++++++++++++++++++++++#}



{#+++++++++ body du site - 07/2015  +++++++++#}
{% block body %}

<div id="wrapper">

    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">


        {#+++++++++ header navigation - 07/2015 +++++++++#}
        {% include 'TroiswaBackBundle:globals:header-nav.html.twig' only %}
        {#+++++++++++++++++++++++++++++++++++++++++++++++#}

        {#+++++++++ sidebar navigation - 07/2015 +++++++++#}
        {% include 'TroiswaBackBundle:globals:sidebar-nav.html.twig' only %}
        {#++++++++++++++++++++++++++++++++++++++++++++++++#}

    </nav>

    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        {#+++++++++ Titre H1 des pages - 07/2015 +++++++++#}
                        {% block h1 %}<i class="fa fa-dashboard"></i> Dashboard <small>Statistics Overview</small>{% endblock h1 %}
                        {#++++++++++++++++++++++++++++++++++++++++++++++++#}
                    </h1>
                    <ol class="breadcrumb">
                        {% block breadcrumb %}
                        <li class="">
                            <a href="{{ path('troiswa_back_administration') }}"><i class="fa fa-dashboard"></i> Dashboard</a>
                        </li>
                        {% endblock breadcrumb %}
                    </ol>
                </div>
            </div>

            {#+++++++++ Message FlashBag - 07/2015 +++++++++#}
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="row">
                    <div class="col-lg-12">
                        <div class="alert alert-success alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <i class="fa fa-info-circle"></i>  {{ flashMessage }}
                        </div>
                    </div>
                </div>
                <!-- /.row -->
            {% endfor %}
            {#++++++++++++++++++++++++++++++++++++++++++++++#}

            
            {#+++++++++ corps du site - 07/2015 +++++++++#}
            {% block content %}


            {% endblock content %}
            {#+++++++++++++++++++++++++++++++++++++++++++#}

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->

{% endblock body %}
{#++++++++++++++++++++++++++++++++++++++++++++#}



{#+++++++++ Script javascripts - 07/2015+++++++++#}
{% block javascripts %}
<!-- jQuery -->
<script type="text/javascript" src="{{ asset('assets/js/jquery.js') }}"></script>
<script type="text/javascript" src="{{ asset('assets/js/jquery-ui.min.js') }}"></script>

<!-- Bootstrap Core JavaScript -->
<script type="text/javascript" src="{{ asset('assets/js/bootstrap.min.js') }}"></script>

 <!-- Tooltips -->
<script type="text/javascript">

    $(document).ready(
        $(function() {
            $('*').tooltip();
        })
    );

</script>

{% endblock javascripts %}
{#+++++++++++++++++++++++++++++++++++++++++++++++#}

